<% if @show %>
    <h1><%= @show.name %>'s Characters</h1>
<% else %>
    <h1>Characters</h1>
<% end %>
<hr>
<ul><% @characters.each do |character| %>
    <li><%= link_to character.name, character_path(character) %></li>
<% end %></ul>
<br>
<%= link_to "Create a new character here", new_character_path %>